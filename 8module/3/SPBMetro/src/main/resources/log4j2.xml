<?xml version="1.0" encoding="UTF-8"?>
<configuration status="WARN">
    <appenders>

        <File name="missedStationsLog" fileName="logs/missedStations.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="lookForStationsLog" fileName="logs/lookForStations.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <File name="exceptionsLog" fileName="logs/exceptions.log" immediateFlush="true">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

    </appenders>
    <loggers>

        <logger name="missedStations" level="info">
            <appender-ref ref="missedStationsLog"/>
        </logger>
        <logger name="lookForStations" level="info">
            <appender-ref ref="lookForStationsLog"/>
        </logger>

        <root level="error">                 //всегда ли нужен рутлогер?
            <appender-ref ref="exceptionsLog"/>
        </root>
    </loggers>
</configuration>